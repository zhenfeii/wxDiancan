.item{
  height: 30px;
  display: block;
  border-bottom: 10px solid #f4f4f4;
}
.name{
  display: block;
  padding: 20px 20px 20px 30px;
  position: relative;
  border-bottom: 1px solid #eee;
}
.pic1{
  width: 25px;
  height: 25px;
  margin-right:13px;
  display:inline-block;
  vertical-align:top;
  border-radius: 50%;
}
.pic2{
  width: 25px;
  height: 25px;
  position: absolute;
  top:20px;
  right: 20px;
  display:inline-block;
  vertical-align:top;
}
.food{
  display: block;
  padding: 18px 20px 18px 0;
  margin-left: 20px;
  position: relative;
  border-bottom: 1px solid #eee;
}
.food-right{
  display: inline-block;
  position: absolute;
  top:20px;
  right: 20px;
  color: #666;
}
.food-num{
  margin-right: 6px;
  font-size: 18px;
}
.delivery{
  display: block;
  padding: 20px 20px 20px 0;
  margin-left: 20px;
  position: relative;
  border-bottom: 1px solid #eee;
}
.delivery-text{
  color: #666;
}
.delivery-price{
  position: absolute;
  top:20px;
  right: 20px;
  color: #666;
}
.price{
  display: block;
  padding: 18px 20px 18px 0;
  margin-left: 20px;
  position: relative;
  border-bottom: 1px solid #eee;
}
.price-text{
  color: #666;
}
.price-price{
  position: absolute;
  top:20px;
  right: 20px;
  color: #fe6102;
}
.money{
  display: block;
  padding: 20px 20px 20px 0;
  margin-left: 20px;
  position: relative;
}
.money-price{
  position: absolute;
  top:20px;
  right: 20px;
  color: #fe6102;
}
.phone{
  display: block;
  padding: 20px;
}
.phone-border{
  margin: 0 auto;
  display: block;
  padding: 10px 0;
  border: 1px solid #eee;
  border-radius: 10px;
  width: 130px;
  text-align: center;
}
.pic3{
  width: 18px;
  height: 18px;
  display:inline-block;
  margin-right: 4px;
}
.phone-text{
  color: #676767;
}
.border{
  display: block;
  border-bottom: 15px solid #f5f5f5;
}
.info{
  display: block;
  padding: 20px 20px 20px 17px;
  border-bottom: 1px solid #eee;
}
.info-time{
  display: block;
  padding: 20px 20px 20px 0;
  margin-left: 20px;
  border-bottom: 1px solid #eee;
  color: #6a6a6a;
}
.info-add{
  display: block;
  padding: 20px 20px 20px 0;
  margin-left: 20px;
  border-bottom: 1px solid #eee;
  color: #6a6a6a;
}
.info-add-name{
  display: inline-block;
  font-size: 18px;
  line-height: 18px;
}
.info-add-phone, .info-add-add{
  padding-left: 98px;
  margin-top: 4px;
  display: block;
  font-size: 18px;
  line-height: 30px;
}
.info-methods{
  display: block;
  padding: 20px 20px 20px 0;
  margin-left: 20px;
  border-bottom: 1px solid #eee;
  color: #6a6a6a;
}
.order{
  display: block;
  padding: 20px 20px 20px 17px;
  border-bottom: 1px solid #eee;
}
.order-num, .order-methods, .order-time{
  display: block;
  padding: 20px 20px 20px 0;
  margin-left: 20px;
  border-bottom: 1px solid #eee;
  color: #6a6a6a;
}
.order-invoice{
  display: block;
  padding: 20px;
  margin-bottom: 10px;
  border-bottom: 1px solid #eee;
  color: #6a6a6a;
}